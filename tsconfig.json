{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"],
  "files": [],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/extensions" },
    { "path": "packages/dsl" },
    { "path": "packages/cli" },
    { "path": "packages/examples" },
    { "path": "packages/architectlm" }
  ]
}
