{
  "name": "architectlm",
  "version": "1.0.0",
  "description": "An architecture for building LLM-powered applications",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "tsx src/index.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "llm",
    "architecture",
    "workflow",
    "process",
    "task",
    "event-driven"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@architectlm/core": "workspace:*",
    "@architectlm/extensions": "workspace:*",
    "@architectlm/dsl": "workspace:*",
    "@architectlm/cli": "workspace:*"
  },
  "devDependencies": {}
}
