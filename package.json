{
  "name": "architectlm",
  "version": "1.0.0",
  "description": "An architecture for building LLM-powered applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "dev": "ts-node src/index.ts",
    "example": "tsx examples/order-processing.ts",
    "example:agent": "tsx examples/agent-example.ts",
    "example:rag-agent": "tsx examples/rag-agent-example.ts",
    "example:plugin": "tsx examples/plugin-runtime-example.ts",
    "example:runtime": "tsx examples/reactive-runtime-example.ts",
    "test:openrouter": "tsx examples/openrouter-rag-test.ts",
    "edit-dsl": "tsx examples/simple-editor-test.ts",
    "edit-dsl-ai": "tsx examples/enhanced-editor-test.ts",
    "sandbox-dsl": "tsx examples/dsl-sandbox-test.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "llm",
    "architecture",
    "workflow",
    "process",
    "task",
    "event-driven"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/node": "^20.17.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.0.8",
    "eslint": "^8.57.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@langchain/openai": "^0.4.4",
    "@types/axios": "^0.14.4",
    "axios": "^1.8.3",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "chromadb": "^2.0.1",
    "diff": "^7.0.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.4.3",
    "langchain": "^0.3.19",
    "ora": "^8.2.0",
    "ts-morph": "^25.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
