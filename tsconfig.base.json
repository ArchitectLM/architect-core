{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/__tests__/**"]
}
